# Environment Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env to Git!

# ===== Node Environment =====
NODE_ENV=development

# ===== PostgreSQL Database =====
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret123
POSTGRES_DB=carbon_platform
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===== MongoDB =====
MONGO_USER=admin
MONGO_PASSWORD=secret123
MONGO_DB=notification_db
MONGO_HOST=localhost
MONGO_PORT=27017

# ===== Redis =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== RabbitMQ =====
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=secret123
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ===== JWT Authentication =====
JWT_SECRET=change-this-to-a-random-string-in-production-use-at-least-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===== API Gateway =====
API_GATEWAY_PORT=80

# ===== Microservices Ports =====
USER_SERVICE_PORT=3001
EV_DATA_SERVICE_PORT=3002
CARBON_CREDIT_SERVICE_PORT=3003
MARKETPLACE_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005
VERIFICATION_SERVICE_PORT=3006
NOTIFICATION_SERVICE_PORT=3007
REPORTING_SERVICE_PORT=3008
AI_SERVICE_PORT=3009

# ===== Frontend =====
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost/api
REACT_APP_WS_URL=ws://localhost/ws

# ===== Email Configuration (Optional) =====
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@carbon-platform.com

# ===== Payment Gateway (Mock for development) =====
PAYMENT_GATEWAY_KEY=test-key-12345
PAYMENT_GATEWAY_URL=https://sandbox.payment-gateway.com/api

# ===== CO2 Calculation Parameters =====
GASOLINE_EMISSION_PER_KM=0.12
EV_EMISSION_PER_KM=0.02
CO2_TO_CREDIT_RATIO=1000

# ===== File Upload =====
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=csv,json,xlsx

# ===== Logging =====
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===== CORS =====
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== Security =====
BCRYPT_ROUNDS=10
SESSION_SECRET=another-random-string-for-session

# ===== External APIs (Optional) =====
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
WEATHER_API_KEY=your-weather-api-key

# ===== Monitoring (Optional) =====
ENABLE_METRICS=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ===== Feature Flags =====
ENABLE_AUCTION=true
ENABLE_AI_SUGGESTION=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_REAL_TIME_UPDATES=false
